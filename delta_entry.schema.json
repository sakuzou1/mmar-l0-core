{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "delta_entry",
  "type": "object",
  "required": ["delta_id", "severity", "until", "block", "evidence", "changes"],
  "properties": {
    "delta_id": { "type": "string" },
    "severity": { "type": "string", "enum": ["PASS", "DELAY", "BLOCK"] },
    "until": { "type": ["string", "null"] },
    "block": { "type": "boolean" },
    "evidence": { "type": "array", "items": { "type": "string" } },
    "changes": { "type": "array" }
  },
  "additionalProperties": true
}
