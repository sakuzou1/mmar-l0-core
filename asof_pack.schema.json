{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "delta_entry",
  "type": "object",
  "properties": {
    "delta_id": { "type": "string" },
    "summary": { "type": "string" },
    "request": { "type": "string" },

    "severity": { "type": "string", "enum": ["PASS", "DELAY", "BLOCK"] },
    "until": { "type": ["string", "null"] },

    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    },

    "block": { "type": "boolean" },

    "impact": {
      "type": "object",
      "properties": {
        "externality": { "type": "string", "enum": ["low", "medium", "high"] },
        "irreversibility": { "type": "string", "enum": ["low", "medium", "high"] }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
